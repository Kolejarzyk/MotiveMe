<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotiveMe.ActivityDetailPage" BackgroundColor="Purple">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Your Goal"></Label>
            <Label x:Name="Goal"></Label>
            <Label Text="Deadline"></Label>
            <Label x:Name="Date"></Label>
            <Label Text="Your Reward"></Label>
            <Label x:Name="Reward"></Label>
            <Button Text="Done" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>