<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotiveMe.WelcomePage"
             BackgroundColor="Purple"   >
    <ContentPage.Content>
        <StackLayout Padding="5,5,5,5">
            <Label VerticalOptions="Center"  Text="{Binding Name, StringFormat='Hello {0}. It is time to celebrate another day :'}"/>
            <Label Text="20.10.2018"></Label>
            
            <Label Text="Those are goals you are going to achieve today!!!" />

            <ListView x:Name="Activity">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ActivityVal}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label Text="Do you want to expand your achievment goal?"/>
            <Button Text="Add Goal" BackgroundColor="NavajoWhite" HorizontalOptions="Start"></Button>

        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>