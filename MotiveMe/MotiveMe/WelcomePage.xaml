<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MotiveMe.WelcomePage"
             BackgroundColor="Purple"   >
    <ContentPage.Content>
        <StackLayout Padding="5,5,5,5">
            <Label Text="Hello Pawel :D. It's time to celebrate another day :)"
                VerticalOptions="Center" FontSize="32"  />

            <Label Text="20.10.2018"></Label>
            
            <Label Text="Those are goals you are going to achieve today!!!" />

            <ListView SeparatorColor="Yellow">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Make a sandwich </x:String>
                        <x:String>Go to sleep</x:String>
                        <x:String>Commit Suicide</x:String>
                        <x:String>Running</x:String>
                    </x:Array>
                </ListView.ItemsSource>
            </ListView>

            <Label Text="Do you want to expand your achievment goal?"/>
            <Button Text="Add Goal" BackgroundColor="NavajoWhite" HorizontalOptions="Start"></Button>

        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>