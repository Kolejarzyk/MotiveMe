<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MotiveMe.ActivityLogsPage"
             BackgroundColor="Purple">
    <ContentPage.Content>
        <StackLayout Padding="5,5,5,5">
            <Label Text="Your Activity Logs" FontSize="29"/>
            <ListView x:Name="Activity">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ActivityVal}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Goal" BackgroundColor="NavajoWhite" HorizontalOptions="Start" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>